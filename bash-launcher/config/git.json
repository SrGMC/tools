      "type": "command",
      "run": "git log",
      "color": "white",
      "wait": "false"
    },
    {
      "name": "Force push",
      "description": "Force push repository",
      "type": "command",
      "run": "git push --force && echo 'Done'",
      "color": "white",
      "wait": "true"
    },
    {
      "name": "Init repository",
      "description": "Create a new repository",
      "type": "command",
